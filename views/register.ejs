<%- include('partials/header', { title: 'Register' }) %>

<section class="auth-container">
  <h1>✨ Регистрация</h1>
  <p style="text-align: center; color: #6b7280; margin-bottom: 1.5rem;">
    Присоединяйтесь и начните общение с AI
  </p>
  
  <form action="/register" method="post" class="auth-form">
    <label for="phone">Номер телефона</label>
    <input 
      type="text" 
      name="phone" 
      id="phone" 
      placeholder="+79001234567" 
      value="<%= typeof prefillPhone !== 'undefined' ? prefillPhone : '' %>" 
      required 
      autofocus
      autocomplete="off"
    />
    <button type="submit">Создать аккаунт</button>
  </form>
  
  <p style="text-align: center; margin-top: 1.5rem; color: #6b7280; font-size: 0.875rem;">
    Уже есть аккаунт? 
    <a href="/login" style="color: #6366f1; font-weight: 600;">Войдите</a>
  </p>
</section>

<%- include('partials/footer') %>